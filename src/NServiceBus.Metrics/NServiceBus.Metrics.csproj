<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net452</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <OutputPath>..\..\binaries\</OutputPath>
    <NoWarn>CS8002</NoWarn>
    <UpdateAssemblyInfo>true</UpdateAssemblyInfo>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>7</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\..\packaging\nuget\NServiceBus.Metrics.nuspec" Link="NServiceBus.Metrics.nuspec" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ILRepack" Version="2.0.13" />
    <PackageReference Include="Metrics.NET" Version="0.4.8" />
    <PackageReference Include="NServiceBus" Version="6.2.0" />
    <PackageReference Include="NuGetPackager" Version="0.6.3" />
    <PackageReference Include="GitVersionTask" Version="4.0.0-beta0012" />
    <PackageReference Include="Obsolete.Fody" Version="4.2.2" />
    <PackageReference Include="ServiceControl.Monitoring.Data" Version="1.0.1" />
  </ItemGroup>
  <Target Name="MergeDependencies" AfterTargets="CopyFilesToOutputDirectory">
    <PropertyGroup>
      <TempFolder>$(TargetDir)temp</TempFolder>
    </PropertyGroup>
    <MakeDir Directories="$(TempFolder)" />
    <Exec Command="$(ILRepack) /out:&quot;$(TempFolder)\$(AssemblyName).dll&quot; &quot;$(TargetDir)$(AssemblyName).dll&quot; &quot;$(TargetDir)Metrics.dll&quot; &quot;$(TargetDir)ServiceControl.Monitoring.Data.dll&quot; /targetplatform:v4 /internalize /lib:&quot;$(TargetDir).&quot; /keyfile:$(AssemblyOriginatorKeyFile)" />
    <ItemGroup>
      <TempFiles Include="$(TempFolder)\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(TempFiles)" DestinationFolder="$(OutputPath)" OverwriteReadOnlyFiles="true" />
    <Delete Files="@(TempFiles)" />
    <RemoveDir Directories="$(TempFolder)" />
  </Target>
</Project>